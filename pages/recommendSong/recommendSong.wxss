.header {
  width: 100%;
  height: 300rpx;
  position: relative;
}
.header image {
  width: 100%;
  height: 100%;
}
.header .date {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  color: #fff;
}
.header .date .day {
  font-size: 60rpx;
}

.listContainer {
  position: relative;
  top: -30rpx;

  padding: 0 20rpx;
  border-radius: 30rpx;
  background: #fff;
}
.listContainer .listHeader {
  height: 80rpx;
  line-height: 80rpx;
}
.listContainer .listHeader .selectMore {
  float: right;
}

.listScroll {
  width: 100%;
  height: calc(100vh - 380rpx);
}
.listScroll .listScrollItem {
  display: flex;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 20rpx;
}
.listScroll .listScrollItem image {
  width: 80rpx;
  height: 80rpx;
  padding-right: 30rpx;
}
.listScroll .listScrollItem .musicInfo {
  flex:1;

  display: flex;
  flex-direction: column;
}
.listScroll .listScrollItem .musicInfo text {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;

  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.listScroll .listScrollItem .iconfont {
  width: 80rpx;
  text-align: right;
}