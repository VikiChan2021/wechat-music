.header {
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
}
.header image {
  width: 50rpx;
  height: 50rpx;
}
.header .search {
  width: 300rpx;
  height: 50rpx;
  line-height: 50rpx;
  padding-left: 20rpx;

  border: 1rpx solid gray;
  border-radius: 10rpx;
}

.navScroll {
  display: flex;
  padding: 10rpx 20rpx;
  height: 80rpx;
}
.navScroll .navContent {
  height: 55rpx;
  margin-right: 20rpx;
  white-space: nowrap;
  text-align: center;
}
.navScroll .navContent.active {
  border-bottom: 6rpx solid red;
}

.videoScroll {
  width: 100%;
  padding: 0 5%;
  height: calc(100vh - 150rpx);
}
.videoScroll .videoScrollItem {
  width: 90%;
  margin-bottom: 20rpx;
}
.videoScroll .videoScrollItem video,
.videoScroll .videoScrollItem image {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}

.videoScrollItem .content {
  font-size: 30rpx;
  height:60rpx;
  line-height: 60rpx;

  max-width: 600rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.footer {
  box-sizing: border-box;
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}
.footer .avatar {
  width: 60rpx !important;
  height: 60rpx !important;
  border-radius: 50% !important;
  vertical-align: middle;
}

.footer  .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.footer .comments_praised {
  float: right;
}

.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}

.comments_praised .btn:after {
  border: none;
}

.comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}

.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}
