.searchContainer {
  padding: 10rpx 20rpx;
}
.searchContainer .header {
  position: relative;
  display: flex;
  align-items: center;
  height: 80rpx;
}
.searchContainer .header .icon-search1 {
  position: absolute;
  left: 25rpx;
}
.searchContainer .header input {
  flex: 1;
  margin-right: 30rpx;
  padding-left: 80rpx;

  border: 1px solid #000;
  border-radius: 10rpx;
  background: #eee;
}
.searchContainer .header .clear {
  position: absolute;
  right: 150rpx;
  z-index: 99;
}
.searchContainer .header .cancel {
  width: 100rpx;
}
.searchPlaceholder {
  color: #d43c33;
}

.hotContainer .title {
  margin: 20rpx 0;
}
.hotContainer .hotList {
  display: flex;
  flex-wrap: wrap;
}
.hotContainer .hotList .hotListItem {
  width: 50%;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  font-size: 32rpx;
}
.hotContainer .hotList .hotListItem .order {
  width: 30rpx;
  text-align: center;
  margin: 0 30rpx;
}
.hotContainer .hotList .hotListItem .iconImg {
  width: 40rpx;
  height: 30rpx;
  margin-left: 20rpx;
}

.showSearchContent .searchContent {
  height: 80rpx;
  line-height: 80rpx;
  color: #d43c33;
  border-bottom: 1px solid #d43c33;
}
.showSearchContent .searchResultList .searchResultListItem {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
}
.showSearchContent .searchResultList .searchResultListItem .icon-search1 {
  position: relative;
  top: -12rpx;
  margin: 0 20rpx;
}
.showSearchContent .searchResultList .searchResultListItem .name {
  display: inline-block;
  max-width: 600rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.history {
  position: relative;
  display: flex;
  flex-wrap: wrap;
  margin: 10rpx 0 20rpx 0;
}
.history .title {
  font-size: 36rpx;
  margin-right: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.history .historyItem {
  height: 50rpx;
  line-height: 50rpx;

  font-size: 32rpx;
  margin:0 20rpx 10rpx 0;
  background: #eee;
  border-radius: 10rpx;
  padding: 5rpx 20rpx;
}
.history .delete {
  position: absolute;
  right: 50rpx;
  bottom: 20rpx;

  /* height: 50rpx;
  line-height: 50rpx; */
  font-size: 40rpx;
}